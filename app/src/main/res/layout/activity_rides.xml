<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RidesActivity"
    android:background="@color/dark_blue">

    <LinearLayout
        android:id="@+id/ll_options_directions"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="96dp"
        android:layout_marginRight="96dp">

        <TextView
            android:id="@+id/txt_one_way_option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/txt_one_way"
            android:textAlignment="center"
            android:textSize="20sp"
            android:background="@drawable/border_directions_left" />

        <TextView
            android:id="@+id/txt_return_option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/txt_return"
            android:textSize="20sp"
            android:textAlignment="center"
            android:background="@drawable/border_directions_right" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_results"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/ll_options_directions">

    </LinearLayout>

